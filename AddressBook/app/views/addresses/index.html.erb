<h1>Addresses</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Office Phone</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.name %></td>
        <td><%= address.office_phone %></td>
        <td><%= address.email %></td>
        <td><button type="button" class="btn btn-success"><%= link_to 'Show', address %></button></td>
        <td><button type="button" class="btn btn-info"><%= link_to 'Edit', edit_address_path(address) %></button></td>
        <td><button type="button" class="btn btn-danger"><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

